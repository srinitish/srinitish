	float avrage;
};
struct sutdents a,b,c;
printf("enter the detail of the top three students in the class\n");
printf("enter the detalil about first rank student\n");
printf("enter the name of the student");
scanf("%s",&a.name);
printf("enter the addmition number of the student");
scanf("%d",&a.addmition);
printf("enter the average mark of the student");
scanf("%f",&a.avrage);

printf("\nenter the detalil about secound rank student\n");
printf("enter the name of the student");
scanf("%s",&b.name);
printf("enter the addmition number of the student");
scanf("%d",&b.addmition);
printf("enter the average mark of the student");
scanf("%f",&b.avrage);



printf("\nenter the detalil about third rank student\n");
printf("enter the name of the student");
scanf("%s",&c.name);
printf("enter the addmition number of the student");
scanf("%d",&c.addmition);
